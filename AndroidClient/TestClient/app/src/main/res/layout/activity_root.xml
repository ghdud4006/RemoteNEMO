<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#414040">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140sp">

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remote NEMO"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textSize="35pt"
        android:textColor="#C7C4C4"
            android:layout_marginTop="10sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_marginTop="30sp">

            <EditText
                android:id="@+id/edSession"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:hint="Please Input Session."
                android:textColorHint="#FF0000"
                android:textSize="10pt"
                android:textColor="#00FF00"
                android:background="#2B2929"
                android:textAlignment="center"
                android:inputType="number"></EditText>
            <Button
                android:id="@+id/btnShare"
                android:onClick="mOnClick"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Share"
                android:textSize="10pt"
                android:textStyle="bold"></Button>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="v 1.0.0"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="10pt"
        android:textColor="#C7C4C4"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30sp"></TextView>


</RelativeLayout>